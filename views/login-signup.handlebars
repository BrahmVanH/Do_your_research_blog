<header class="masthead">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-lg-8 mx-auto position-relative">
                <div class="site-heading">
                    <h1></h1>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container">
    <div class="row">
        <div class="col-md-10 col-lg-8 mx-auto" style="width: 50%;">
            <form id="createAccountForm">
                <input id="createFirstName" class="form-control" type="text" placeholder="First Name">
                <input id="createLastName" class="form-control" type="text" placeholder="Last Name">
                <input id="createEmail" class="form-control" type="text" placeholder="Email ">
                <input id="createPassword" class="form-control" type="password" placeholder="Enter a password">
                <input id="reEnterCreatePassword" class="form-control" type="password" placeholder="Re-enter Password">
                <div class="mb-3">
                    <button id="createAccountBtn" class="btn btn-primary" id="sendMessageButton" type="submit">Create Account</button>
                </div>
            </form>
        </div>
        <div class="col">
            <section class="py-4 py-xl-5">
                <div class="container">
                    <div class="row mb-5">
                        <div class="col-md-8 col-xl-6 text-center mx-auto">
                            <h2>Log in</h2>
                        </div>
                    </div>
                    <div class="row d-flex justify-content-center">
                        <div class="col">
                            <form class="text-center" method="post">
                                <div class="mb-3">
                                    <input id="loginEmail" class="form-control" type="email" placeholder="Email">
                                </div>
                                <div class="mb-3">
                                    <input id="loginPassword" class="form-control" type="password" name="password" placeholder="Password">
                                </div>
                                <div class="mb-3">
                                    <button id="loginBtn" class="btn btn-primary d-block w-100" type="submit">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
<hr>
   